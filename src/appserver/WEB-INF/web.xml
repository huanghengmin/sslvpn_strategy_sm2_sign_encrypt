<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
    <!--<filter>-->
		<!--<filter-name>struts2</filter-name> -->
		<!--<filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>-->
	<!--</filter>-->
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>
	<filter-mapping>
		<filter-name>struts2</filter-name> 
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<display-name>SslvpnStrategyCenter</display-name>
	<description>SslvpnStrategyCenter</description>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:spring.xml</param-value>
	</context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!--下载 android client-->
    <servlet>
        <servlet-name>DownLoadAndroid</servlet-name>
        <servlet-class>com.hzih.sslvpn.web.servlet.DownLoadAndroid</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownLoadAndroid</servlet-name>
        <url-pattern>/DownLoadAndroid</url-pattern>
    </servlet-mapping>

    <!--下载 Windows 32 client-->
    <servlet>
        <servlet-name>DownLoadWindowsX86</servlet-name>
        <servlet-class>com.hzih.sslvpn.web.servlet.DownLoadWindowsX86</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownLoadWindowsX86</servlet-name>
        <url-pattern>/DownLoadWindowsX86</url-pattern>
    </servlet-mapping>

    <!--下载 Windows 64 client-->
    <servlet>
        <servlet-name>DownLoadWindowsX64</servlet-name>
        <servlet-class>com.hzih.sslvpn.web.servlet.DownLoadWindowsX64</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownLoadWindowsX64</servlet-name>
        <url-pattern>/DownLoadWindowsX64</url-pattern>
    </servlet-mapping>

    <!--sslvpn 在线用户-->
    <servlet>
        <servlet-name>DoTermOnLine</servlet-name>
        <servlet-class>com.hzih.sslvpn.web.action.sslvpn.online.DoTermOnLine</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoTermOnLine</servlet-name>
        <url-pattern>/DoTermOnLine</url-pattern>
    </servlet-mapping>

    <!--sslvpn ALL用户-->
    <servlet>
        <servlet-name>DoTermAll</servlet-name>
        <servlet-class>com.hzih.sslvpn.web.action.sslvpn.online.DoTermAll</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoTermAll</servlet-name>
        <url-pattern>/DoTermAll</url-pattern>
    </servlet-mapping>

	<session-config>
		<session-timeout>-1</session-timeout>
	</session-config>

    <!--终端信息绑定-servlet-->
    <servlet>
        <servlet-name>DoTerminalThreeYards</servlet-name>
        <servlet-class>
            com.hzih.sslvpn.web.action.sslvpn.client.threeyards.DoTerminalThreeYards
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DoTerminalThreeYards</servlet-name>
        <url-pattern>/DoTerminalThreeYards</url-pattern>
    </servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
    <jsp-config>
        <taglib>
            <taglib-uri>/tags/core</taglib-uri>
            <taglib-location>/WEB-INF/c-1_0-rt.tld</taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>http://www.collin.cn/taglib/lbs</taglib-uri>
            <taglib-location>/WEB-INF/lbs.tld</taglib-location>
        </taglib>
	</jsp-config>
</web-app>
